#
# Initialize APT in a fresh container
# Needs: gnupg2
#
# This currently has no error checking at all
# and only works for a recent Debian.

deploy	debian

depend	ip resolve

run	apt-key add /etc/apt/trusted.gpg.d/*.gpg

# for some reason "ifdown" is needed before "ifup"
run	ifdown -a
run	ifup -a && ip a s && apt-get update
run	ifdown -a

